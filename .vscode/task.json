{
  "tasks": [
      {
          "type": "cppbuild",
          "label": "C/C++: g++ 生成活动文件",
          "command": "/usr/bin/g++",
          "args": [
              "-g",
              "${file}",
              "-std=c++11",
              "-lpthread",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$g++"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "调试器生成的任务。"
      }
  ],
  "version": "2.0.0"
}